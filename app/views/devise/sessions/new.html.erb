<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: "registration-main", local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <h3 class="form-header-text">
      ログイン
    </h3>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・スマートフォンどちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"8文字以上の半角英数" %>
  </div>
  <div class="login-btn">
    <%= f.submit "ログイン", class:"login-yellow-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>