<%= render "shared/second-header" %>


<%# タグ一覧 %>
<div class="tag-search">
  <ul class="tag_lists">
    <% @tag_list.each do |list| %>
      <span>
      <% unless list.travels.count == 0 %>
      <li class="tag_lists_sub">
        <%= link_to list.tag_name, tag_travels_path(tag_id: list.id) %>
        <%= "(#{list.travels.count})" %><br>
      </li>
      <% end %>
      </span>
    <% end %>
  </ul>
</div>

<%# 検索結果一覧 %>
<div class="tag-search-result">
  <%= "タグが - " %>
    <div class="tag_lists_result"><%= @tag.tag_name %></div>
  <%= " - の投稿一覧" %>
</div>
<ul class="lists">
  <% @travels.each do |travel| %>
    <li class='list'>
      <%= link_to "/travels/#{travel.id}" do %>
        <div class='travel-img-content'>
          <%= image_tag travel.image, class: "travel-img" %>
        </div>
      <% end %>
      <%= travel.travel_title %>
      <%= travel.user.nickname %>
    </li>
  <% end %>
</ul>
<div class="tag-pagination">
  <%= paginate(@travels) %>
</div>
