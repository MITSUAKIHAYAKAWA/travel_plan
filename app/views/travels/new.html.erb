<%= render "shared/second-header" %>

<div class="travel-contents">
  <h3 class="travel-header-sub">旅行の記録を作成</h3>
  <%= form_with model: @travel, url: "#", local: true do |f| %>
  <div class="travel-content">
    <div class="weight-bold-text">
      タイトル
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :travel_title, class:"travel_text", id:"travel_title", placeholder:"タイトルを入力してください", maxlength:"40" %>
  </div>
  <div class="travel-content">
    <div class="img-upload">
      <div class="weight-bold-text">
        アイキャッチ
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
  </div>
  <div class="travel-content">
    <div class="weight-bold-text">
      期間
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:travel_time_one_id, [], :id, :name, {}, {class:"time-select-box", id:"travel-time"}) %>
    〜
    <%= f.collection_select(:travel_time_two_id, [], :id, :name, {}, {class:"time-select-box", id:"travel-time"}) %>
  </div>
  <div class="travel-content">
    <div class="weight-bold-text">
      旅行先
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:destination_id, [], :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>
  <div class="travel-content">
    <div class="weight-bold-text">
      交通手段
      <span class="indispensable">任意</span>
    </div>
    <%= f.collection_select(:transpotation_id, [], :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>
  <% end %>
</div>

<%= render "shared/second-footer" %>